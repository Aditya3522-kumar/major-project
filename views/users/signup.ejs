<% layout("layouts/boilerplate") %>

<div class="row mt-3 mb-5">
     <div class="col-6 offset-3 mb-3"><h4>signup for wanderlust</h4></div>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username">username</label>
                <input type="text" name="username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback"> looks good</div>

                <label for="email">email</label>
                <input type="email" name="email" id="email" type="text" class="form-control" required>
               
                <label for="password">password</label>
                <input name="password" id="password" type="password" class="form-control" required>

            </div>
             <button class="btn btn-success">Sign up</button>
              
        </form>

    </div>

</div>